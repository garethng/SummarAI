{
  "manifest_version": 3,
  "name": "SummarAI",
  "version": "1.2.3",
  "homepage_url": "https://zhangferry.com",
  "description": "This browser extension utilizes AI technology to analyze web pages and extract important information.",
  "icons": {
    "16": "logo-16.png",
    "48": "logo-48.png",
    "128": "logo-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "logo-128.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://*.openai.com/"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>",
        "*://*/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}
